<h1>New Camper Form</h1>


<% if flash[:my_errors]%>
    <%flash[:my_errors].each do |error|%>
        <%=error%>
    <%end%>
<%end%>


<%= form_for @camper do |f|%>

    <%=f.label :name%>
    <%=f.text_field :name%>

    <%=f.label :age%>
    <%=f.number_field :age%>

    <%= f.submit "Create Camper"%>
<%end%>